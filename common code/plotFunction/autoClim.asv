colorbar;
set(gca, 'FontWeight', 'bold', 'FontSize', 16, 'LineWidth', 2, 'XMinorTick', 'on', 'YMinorTick', 'on', 'ticklength', [0.02 0.02], 'Xgrid', 'on', 'Ygrid', 'on', 'Box', 'on');
end
